// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Plan {
  STARTER
  PRO
  ENTERPRISE
}

model Property {
  id        String   @id @default(uuid())
  slug      String   @unique
  name      String
  wifiSsid  String?
  wifiPass  String?
  rules     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Billing
  plan                 Plan    @default(STARTER)
  stripeCustomerId     String? @unique
  stripeSubscriptionId String?
  stripePriceId        String?
  subscriptionStatus   String?

  // Branding (NEW)
  logoDataUrl    String?
  brandPrimary   String? // e.g. "#0F172A"
  brandSecondary String? // e.g. "#38BDF8"

  // Relations
  rooms   Room[]
  Section Section[]
}

model Room {
  id         String   @id @default(uuid())
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  name       String
  createdAt  DateTime @default(now())
}

enum SectionKind {
  WELCOME
  AMENITIES
  GUIDE
}

model Section {
  id         String      @id @default(uuid())
  propertyId String
  property   Property    @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  kind       SectionKind
  title      String?
  body       String?
  updatedAt  DateTime    @updatedAt

  @@unique([propertyId, kind])
}
